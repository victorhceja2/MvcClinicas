            </div>
            <div class="form-group">
                <label asp-for="AcidoFolico" class="control-label"></label>
                <input asp-for="AcidoFolico" class="form-control" />
                <span asp-validation-for="AcidoFolico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CitasMedicas" class="control-label"></label>
